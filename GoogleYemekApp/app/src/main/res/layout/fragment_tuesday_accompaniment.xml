<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.order.EntreeMenuFragment">

    <data>
        <variable
            name="viewModel"
            type="com.onuremren.googleyemekapp.model.OrderViewModel" />

        <!-- TODO: Add the data binding variable for the EntreeMenuFragment -->
        <variable
            name="tuesdayAccompanimentFragment"
            type="com.onuremren.googleyemekapp.tuesdayUi.TuesdayAccompanimentFragment" />
    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/side_margin"
            android:paddingEnd="@dimen/side_margin"
            android:paddingBottom="@dimen/side_margin">

            <RadioGroup
                android:id="@+id/entree_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- TODO: set the entree in the view model when the RadioButton is clicked -->

                <RadioButton
                    android:id="@+id/garRadio1TD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:onClick='@{() -> viewModel.setAccompaniment("Salata")}'
                    android:text='@{viewModel.tuesdayMenuItem["Salata"].name}'
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:textColor="@color/kahve"
                    android:textSize="20sp"
                    tools:text="Entree 1" />

                <LinearLayout android:id="@+id/addMoreLayout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <ImageView android:id="@+id/imageMinus1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/cerceve"

                        android:onClick="@{() -> viewModel.minusGar()}"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_baseline_remove"
                        app:tint="@color/red"
                        />


                    <TextView android:id="@+id/tvCount1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginStart="05dp"
                        android:layout_marginEnd="05dp"
                        android:textColor="@color/black"
                        android:text="1"
                        android:gravity="center_horizontal"
                        />

                    <ImageView android:id="@+id/imageAddOne1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/cerceve"
                        android:onClick="@{() -> viewModel.setGar()}"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_baseline_add"
                        app:tint="@color/red"
                        />


                </LinearLayout>

                <TextView
                    android:id="@+id/cauliflower_description"
                    style="@style/Widget.MenuItem.TextView.Info"
                    android:text='@{viewModel.tuesdayMenuItem["Salata"].description}'
                    tools:text="Entree 1 description" />

                <TextView
                    android:id="@+id/cauliflower_price"
                    style="@style/Widget.MenuItem.TextView.Info"
                    android:paddingTop="@dimen/base_margin"
                    android:text='@{viewModel.tuesdayMenuItem["Salata"].getFormattedPrice()}'
                    tools:text="$0.00" />

                <View
                    style="@style/Widget.LunchTray.Divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cauliflower_description" />

                <!-- TODO: set the entree in the view model when the RadioButton is clicked -->
                <RadioButton
                    android:id="@+id/garRadio2TD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/kahve"
                    android:textSize="20sp"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:text='@{viewModel.tuesdayMenuItem["Kola"].name}'
                    android:onClick='@{() -> viewModel.setAccompaniment("Kola")}'
                    tools:text="Entree 2" />

                <LinearLayout android:id="@+id/addMoreLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <ImageView android:id="@+id/imageMinus2"
                        android:layout_width="25dp"
                        android:onClick="@{() -> viewModel.minusGar2()}"
                        android:layout_height="25dp"
                        android:background="@drawable/cerceve"

                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_baseline_remove"
                        app:tint="@color/red"
                        />


                    <TextView android:id="@+id/tvCount2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginStart="05dp"
                        android:layout_marginEnd="05dp"
                        android:textColor="@color/black"
                        android:text="1"
                        android:gravity="center_horizontal"
                        />

                    <ImageView android:id="@+id/imageAddOne2"
                        android:layout_width="25dp"
                        android:background="@drawable/cerceve"

                        android:layout_height="25dp"
                        android:onClick="@{() -> viewModel.setGar2()}"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_baseline_add"
                        app:tint="@color/red"
                        />


                </LinearLayout>
                <TextView
                    android:id="@+id/chili_description"
                    style="@style/Widget.MenuItem.TextView.Info"
                    android:text='@{viewModel.tuesdayMenuItem["Kola"].description}'
                    tools:text="Entree 2 description" />

                <TextView
                    android:id="@+id/chili_price"
                    style="@style/Widget.MenuItem.TextView.Info"
                    android:paddingTop="@dimen/base_margin"
                    android:text='@{viewModel.tuesdayMenuItem["Kola"].getFormattedPrice()}'
                    tools:text="$0.00" />

                <View
                    style="@style/Widget.LunchTray.Divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/chili_description" />

                <!-- TODO: set the entree in the view model when the RadioButton is clicked -->
                <RadioButton
                    android:id="@+id/garRadio3TD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/kahve"
                    android:textSize="20sp"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:text='@{viewModel.tuesdayMenuItem["Cacık"].name}'
                    android:onClick='@{() -> viewModel.setAccompaniment("Cacık")}'
                    tools:text="Entree 3" />

                <LinearLayout
                    android:id="@+id/addMoreLayout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/imageMinus3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/cerceve"

                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_baseline_remove"
                        android:onClick="@{() -> viewModel.minusGar3()}"
                        app:tint="@color/red" />


                    <TextView
                        android:id="@+id/tvCount3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="05dp"
                        android:layout_marginEnd="05dp"
                        android:gravity="center_horizontal"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imageAddOne3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/cerceve"

                        android:layout_gravity="center_horizontal"
                        android:onClick="@{() -> viewModel.setGar3()}"
                        android:src="@drawable/ic_baseline_add"
                        app:tint="@color/red" />


                </LinearLayout>
                <TextView
                    android:id="@+id/pasta_description"
                    style="@style/Widget.MenuItem.TextView.Info"
                    android:text='@{viewModel.tuesdayMenuItem["Cacık"].description}'
                    tools:text="Entree 3 description" />

                <TextView
                    android:id="@+id/pasta_price"
                    style="@style/Widget.MenuItem.TextView.Info"
                    android:paddingTop="@dimen/base_margin"
                    android:text='@{viewModel.tuesdayMenuItem["Cacık"].getFormattedPrice()}'
                    tools:text="$0.00" />

                <View
                    style="@style/Widget.LunchTray.Divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pasta_description" />

                <!-- TODO: set the entree in the view model when the RadioButton is clicked -->
                <RadioButton
                    android:id="@+id/garRadio4TD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/kahve"
                    android:textSize="20sp"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:text='@{viewModel.tuesdayMenuItem["Yoğurt"].name}'
                    android:onClick='@{() -> viewModel.setAccompaniment("Yoğurt")}'
                    tools:text="Entree 4" />

                <LinearLayout android:id="@+id/addMoreLayout4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <ImageView android:id="@+id/imageMinus4"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_horizontal"
                        android:onClick="@{() -> viewModel.minusGar4()}"
                        android:background="@drawable/cerceve"

                        android:src="@drawable/ic_baseline_remove"
                        app:tint="@color/red"
                        />


                    <TextView android:id="@+id/tvCount4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginStart="05dp"
                        android:layout_marginEnd="05dp"
                        android:textColor="@color/black"
                        android:text="1"
                        android:gravity="center_horizontal"
                        />

                    <ImageView android:id="@+id/imageAddOne4"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/cerceve"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_baseline_add"
                        android:onClick="@{() -> viewModel.setGar4()}"
                        app:tint="@color/red"
                        />


                </LinearLayout>
                <TextView
                    android:id="@+id/skillet_description"
                    style="@style/Widget.MenuItem.TextView.Info"
                    android:text='@{viewModel.tuesdayMenuItem["Yoğurt"].description}'
                    tools:text="Entree 4 description" />

                <TextView
                    android:id="@+id/skillet_price"
                    style="@style/Widget.MenuItem.TextView.Info"
                    android:paddingTop="@dimen/base_margin"
                    android:text='@{viewModel.tuesdayMenuItem["Yoğurt"].getFormattedPrice()}'
                    tools:text="$0.00" />

            </RadioGroup>

            <View
                android:id="@+id/divider"
                style="@style/Widget.LunchTray.Divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/base_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/entree_options" />

            <!-- TODO: set the text to the current subtotal value from the view model -->
            <TextView
                android:id="@+id/subtotal"
                style="@style/Widget.LunchTray.TextView.Subtotal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider"
                tools:text="Subtotal $5.00"
                android:text="@{@string/subtotal(viewModel.subtotal)}"/>

            <!-- TODO: cancel the order when clicked -->

            <!-- TODO: go to the next screen when clicked -->

            <Button
                android:id="@+id/cancel_button"
                android:text="Siparişi Temizle"
                style="@style/Widget.Order.Button.Cancel"
                android:onClick="@{(a) -> tuesdayAccompanimentFragment.cancelOrder()}"
                app:layout_constraintEnd_toStartOf="@id/next_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/next_button" />

            <Button
                android:id="@+id/next_button"
                style="@style/Widget.Order.Button.Next"
                android:onClick="@{() -> tuesdayAccompanimentFragment.goToNextScreen()}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cancel_button"
                app:layout_constraintTop_toBottomOf="@id/subtotal"
                app:layout_constraintVertical_bias="0.152" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>